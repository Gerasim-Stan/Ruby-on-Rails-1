<div class="Sign_Form">
  <%= form_for(:user) do |f| %>
    <%- if @user and session[@user.id] %>
      <%= button_to @user.email, user_path(@user) %>
      <%= button_to "Logout", "logout" %>
    <% end %>
  <% end %>
  <h1>Users list</h1>
  <%- @users.each do |user| %>
    <p> First name: <%= label_tag(:first_name, user.first_name) %> </p>
    <p> Last name: <%= label_tag(:last_name, user.last_name)%> </p>
    <p> Email: <%= label_tag(:email, user.email)%> </p>
  <% end %>
</div>
