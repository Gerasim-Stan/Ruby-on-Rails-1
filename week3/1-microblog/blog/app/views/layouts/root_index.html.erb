<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% @articles.each do |article| %>
    <strong><%= article.title + article.created_at.strftime(" ~ %B %e %Y") %></strong><br />
    <%= article.text %><br /><br />
  <% end %>
  <% @photos.each do |photo| %>
    <strong><%= photo.title + photo.created_at.strftime(" ~ %B %e %Y") %></strong><br />
    <%= image_tag photo.url %><br /><br />
  <% end %>
<%= yield %>

</body>
</html>
